@page
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager


@if (signInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-action="LogOut" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-link">Hello, @User.Identity.Name</li>
            <li class="mr-3 nav-link">
                <a href="javascript:document.getElementById('logoutForm').submit()"> Log Out</a>
            </li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav">
    <li class="nav-item">
        <button class="btn btn-outline-primary" id="registerLink" asp-controller="Account" asp-action="Register">
            Register
        </button>
    </li>
  
<li class="nav-item ml-3">
    <button class="btn btn-primary" id="loginLink" asp-controller="Account" asp-action="Login">
        Login
    </button>

</li>
 

</ul>
}